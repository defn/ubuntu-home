#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  case "$(uname -s)" in
    Linux)
      ${NOSUDO} sudo rm -f /etc/dnsmasq.d/nih
      ${NOSUDO} sudo rm -f /etc/default/docker
      ${NOSUDO} sudo systemctl restart dnsmasq
      ${NOSUDO} sudo systemctl restart docker
      ;;
  esac

  rm -f /config/ssh/authorized_keys
}

main "$@"
